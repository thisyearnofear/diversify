    "@lifi/sdk": "3.15.3",
    "@stable-station/mento-utils": "workspace:*",
    "autoprefixer": "^10.4.0",
    "axios": "1.13.2",
    "chart.js": "^4.4.9",
    "ethers": "^5.7",
    "framer-motion": "12.26.2",
    "next": "^15.2.0",
    "postcss": "^8.4.0",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.1",
    "viem": "^2.37.0",
    "wagmi": "^2.14.15"
